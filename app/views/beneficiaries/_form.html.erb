  <br/>
  <% if false %><br>
    <% f.text_field :pin, class: "form-control col-md-2", placeholder: "Enter otp" %><br/>
    <%= f.submit t('.add_beneficiary'),class: "btn btn-outline-secondary" %>
  <% end %>
<% end %><br/>
