<div align="center">
<%= form_for beneficiary do |f| %>
  <div class="row">
    <div class="col">
      <%= t '.acc_number' %><%= f.text_field :account_number, class: "form-control col-md-2" %>
      <%= t '.nick_name' %><%= f.text_field :nick_name, class: "form-control col-md-2" %> <br/>
    </div>
  </div>
  <%# Create's a drop down for list of bank accounts %>

  <%# f.collection_select :id, Bank.order(:name), :id, :name,{ include_blank: true },required: true,  class: "btn btn-primary dropdown-toggle" %>
